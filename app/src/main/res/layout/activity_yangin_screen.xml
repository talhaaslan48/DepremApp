<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:background="@drawable/orange1"
    android:layout_height="match_parent"
    tools:context=".YanginScreen" >

    <TextView
        android:id="@+id/textView14"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:text=" Panik yapmadan, mümkün olduğunca sakin kalmaya odaklanın."
        android:drawableLeft="@drawable/baseline_circle_24"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:text=" Duman solumamak için ıslak havlu veya bez kullanarak burnunuzu kapatın."
        android:drawableLeft="@drawable/baseline_circle_24"
        android:drawablePadding="10dp"
        app:layout_constraintBottom_toTopOf="@id/textView16"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/textView14"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@id/textView14"
        app:layout_constraintTop_toBottomOf="@id/textView14"
        app:layout_constraintVertical_bias="0.61"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="296dp"
        android:layout_height="70dp"
        android:text=" Mümkün olan en iyi kaçış yolunu bulmak adına hızlı hareket etmeye çalışın. Değerli eşyalarınızı kurtarmak için zaman kaybetmeyin."
        android:drawableLeft="@drawable/baseline_circle_24"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintBottom_toTopOf="@id/textView17"
        app:layout_constraintEnd_toEndOf="@id/textView15"
        app:layout_constraintStart_toStartOf="@id/textView15"
        app:layout_constraintTop_toBottomOf="@id/textView15"
        app:layout_constraintVertical_bias="0.742"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:text=" Kaçarken asansörü kesinlikle kullanmayın."
        android:drawableLeft="@drawable/baseline_circle_24"
        android:drawablePadding="10dp"
        app:layout_constraintHorizontal_bias="0.504"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/textView16"
        app:layout_constraintBottom_toTopOf="@id/textView22"
        app:layout_constraintStart_toStartOf="@id/textView16"
        app:layout_constraintTop_toBottomOf="@id/textView16"
        app:layout_constraintVertical_bias="0.859"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:text=" Kaçış sırasında giysilerinizi ıslatarak alev almalarını önlemeye çalışın."
        android:drawableLeft="@drawable/baseline_circle_24"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintVertical_bias="0.962"/>

    <VideoView
        android:id="@+id/videoView3"
        android:layout_width="410dp"
        android:layout_height="323dp"
        app:layout_constraintBottom_toTopOf="@id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>